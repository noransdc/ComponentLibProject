<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            />

        <Button
            android:id="@+id/btn_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="tab"
            android:layout_marginStart="10dp"
            />

    </LinearLayout>



    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/stl_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tl_divider_color="#333333"
        app:tl_text_select_color="#fc0"
        app:tl_text_unselect_color="#333333"
        app:tl_text_select_color2="#fc0"
        app:tl_text_unselect_color2="#333333"
        app:tl_text_padding_left2="5dp"
        app:tl_indicator_drawable="@drawable/corner_1"
        app:tl_text_size_select="18sp"
        app:tl_text_size_unselect="14sp"
        app:tl_text_size_select2="18sp"
        app:tl_text_size_unselect2="14sp"
        app:tl_tab_padding_width="25dp"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



</LinearLayout>